<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:orientation="vertical"
android:layout_gravity="center"
tools:context="prototype.demonetik_tpe.TPEFragment" >

    <TextView
        android:id="@+id/tpe_montant"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:editable="false"
        android:text="@string/montant"/>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <TableRow>
            <Button
                android:id="@+id/tpe_bouton_1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="1" />

            <Button
                android:id="@+id/tpe_bouton_2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="2" />

            <Button
                android:id="@+id/tpe_bouton_3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="3" />
        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/tpe_bouton_4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="4" />

            <Button
                android:id="@+id/tpe_bouton_5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="5" />

            <Button
                android:id="@+id/tpe_bouton_6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="6" />
        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/tpe_bouton_7"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="7" />

            <Button
                android:id="@+id/tpe_bouton_8"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="8" />

            <Button
                android:id="@+id/tpe_bouton_9"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="9" />
        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/tpe_bouton_virgule"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="," />

            <Button
                android:id="@+id/tpe_bouton_0"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="0" />

            <Button
                android:id="@+id/tpe_bouton_diese"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="#" />
        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/tpe_bouton_annuler"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="@string/annuler" />

            <Button
                android:id="@+id/tpe_bouton_corriger"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="@string/corriger" />

            <Button
                android:id="@+id/tpe_bouton_valider"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="@string/valider" />
        </TableRow>
    </TableLayout>
</LinearLayout>
